{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Aktywacja list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Od</th>
                <th>Do</th>
                <th>Nrtelefonu</th>
                <th>Uzytkownik</th>
                <th>Pakiet</th>
                <th>Actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('aktywacja_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.od %}{{ entity.od|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.do %}{{ entity.do|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.nrtelefon}}</td>
                <td>{{ entity.nrtelefon.uzytkownik}}</td>
                <td>{{ entity.package}}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('aktywacja_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('aktywacja_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('aktywacja_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
